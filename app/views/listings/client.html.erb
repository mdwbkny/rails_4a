<html>
<title>NOOKLYN</title>
<h1 id="head">NOOKLYN</h1>

<div id="menu">
	<ul>
		<li><a href="/">Home</a></li>
		<li><a href="/listings">Listings</a></li>
	</ul>
</div>
<center>
<table class="pure-table pure-table-bordered">
    <thead>
        <tr>
        	<th>ID</th>
            <th>Image</th>
            <th>Address</th>
            <th>Unit</th>
            <th>Price</th>
            <th>Description</th>
            <th>Show</th>
        </tr>
    </thead>
    		<% @listings.each do |listing| %>
    <tbody>
        <tr>
            <td><%= listing.id %></td>
            <td><%= image_tag listing.image.url(:thumb) %></td>
            <td><%= listing.address %></td>
            <td><%= listing.unit %></td>
            <td>$<%= listing.price %>.00</td>
            <td><%= listing.description %></td>
            <td><%= link_to "Show", listing %></td>
        </tr>
        	<% end %>
    </tbody>
</table></center>
<footer>&copy; Copyright 2015 - NOOKLYN</footer>
</html>